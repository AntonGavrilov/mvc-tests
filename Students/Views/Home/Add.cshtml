@model List<Students.Models.Student>
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    for (int i = 0; i < Model.Count; i++)
    {
        <h4>Книга № @(i+1)</h4>
        @: Id:   @Html.HiddenFor(m => m[i].Id)
        @: Name: @Html.EditorFor(m => m[i].Name)
        @: SureName: @Html.EditorFor(m => m[i].Surename)
    }
    <input type="submit" />
}

